<Window x:Class="Kai.Client.CallCenter.Windows.CustMain_SearchedWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kai.Client.CallCenter.Windows"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:Kai.Client.CallCenter.MVVM.ViewModels"
        xmlns:vs="clr-namespace:Kai.Client.CallCenter.MVVM.ViewServices"
        Title="고객검색" Height="470" Width="950" ResizeMode="CanMinimize"
        FontSize="13" Background="LightGray" 
        Loaded="Window_Loaded" Unloaded="Window_Unloaded">
    <Window.DataContext>
        <vs:VsCustMain_SearchedWnd/>
    </Window.DataContext>

    <Window.Resources>
        <!--Image-->
        <!--<Style x:Key="ImageSize_MidStyle" TargetType="Image">
            <Setter Property="Width" Value="21"/>
        </Style>
        <Style x:Key="ImageSize_SmallStyle" TargetType="Image">
            <Setter Property="Width" Value="15"/>
        </Style>-->
    </Window.Resources>

    <Grid  Margin="15,10,10,5" Width="900" Height="420" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <!-- R-0 Header-->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,0,0,0" HorizontalAlignment="Left">
            <!--세금계산서-->
            <Border BorderBrush="Black" BorderThickness="1" Margin="{StaticResource AppMargin-1-100}" 
                    Width="150" Height="{StaticResource AppItemHeight_Normal}">
                <CheckBox x:Name="ChkBoxWithNoUsing" Content="사용중지 고객포함" 
                          Style="{StaticResource AppCheckBoxStyle_Normal}" HorizontalAlignment="Left" Margin="5,0,0,0" 
                          Click="ChkBoxWithNoUsing_Click"/>
            </Border>

            <!--닫기 버튼-->
            <Button x:Name="BtnClose" Click="BtnClose_Click" Width="100" Height="26" Margin="646,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="\Resources\Images\Close001.png" Width="{StaticResource AppImageHeight_Mid}"/>
                    <TextBlock Text="      닫기     " HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
        
        <!-- R-1 Datagrid-->
        <DataGrid Grid.Row="1" x:Name="DGridCust" ItemsSource="{Binding oc_VmCustMainsForWnd}" Margin="5,5,0,0" MinWidth="300" 
                  HeadersVisibility="Column" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                  Style="{StaticResource AppDatagridStyle_Normal}"
                  CellStyle="{StaticResource AppCellStyle_Normal}"
                  ColumnHeaderStyle="{StaticResource AppColumnHeaderStyle_Normal}"
                  MouseDoubleClick="DGridCustMouseDoubleClick" LoadingRow="DGridCust_LoadingRow" PreviewKeyDown="DGridCust_PreviewKeyDown"
                  MouseRightButtonDown="DGridCustMouseRightButtonDown">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="번호" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, 
                                       Path=Header}" 
                                       HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="콜센터" Binding="{Binding CenterName}" Width="100" ElementStyle="{StaticResource AppDataGridTextColumnStyle_Center}"/>
                <DataGridTextColumn Header="고객명" Binding="{Binding CustName}" Width="120"/>
                <DataGridTextColumn Header="From" Binding="{Binding CustFrom}" Width="120"/>
                <DataGridTextColumn Header="거래처명" Binding="{Binding CompName}" Width="120"/>
                <DataGridTextColumn Header="부서명" Binding="{Binding DeptName}" Width="80"/>
                <DataGridTextColumn Header="담당/직위" Binding="{Binding ChargeName}" Width="80"/>
                <DataGridTextColumn Header="전화번호1" Binding="{Binding TelNo1}" Width="100" ElementStyle="{StaticResource AppDataGridTextColumnStyle_Center}"/>
                <DataGridTextColumn Header="전화번호2" Binding="{Binding TelNo2}" Width="100" ElementStyle="{StaticResource AppDataGridTextColumnStyle_Center}"/>
                <DataGridTextColumn Header="거래" Binding="{Binding TradeType}" Width="40" ElementStyle="{StaticResource AppDataGridTextColumnStyle_Center}"/>
                <DataGridTextColumn Header="사용" Binding="{Binding Using}" Width="40" ElementStyle="{StaticResource AppDataGridTextColumnStyle_Center}"/>
                <DataGridTextColumn Header="기준동" Binding="{Binding DongBasic}" Width="70"/>
                <DataGridTextColumn Header="위치" Binding="{Binding DetailAddr}" Width="500"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 하단 정보 표시 -->
        <Border Grid.Row="2" Padding="10">
            <TextBlock x:Name="TBlkCount"
                       Text="합계: 0"
                       FontWeight="SemiBold" />
        </Border>
    </Grid>
</Window>
