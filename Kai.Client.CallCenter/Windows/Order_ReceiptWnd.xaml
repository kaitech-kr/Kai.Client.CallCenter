<Window x:Class="Kai.Client.CallCenter.Windows.Order_ReceiptWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Kai.Client.CallCenter.Windows"
        xmlns:converters="clr-namespace:Kai.Client.CallCenter.MVVM.Converters"
        mc:Ignorable="d"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="오더접수" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" Background="LightGray"
        Loaded="Window_Loaded" Unloaded="Window_Unloaded">
    <Window.Resources>
        <!--Converters-->
        <converters:WonFormatConverter x:Key="WonFormatConverter"/>
        <converters:PhoneNumberConverter x:Key="PhoneNumberConverter"/>
        <converters:OrderStateToBackgroundConverter x:Key="OrderStateToBackgroundConverter"/>
        <converters:OrBoolConverter x:Key="OrBoolConverter"/>

        <!--Height-->
        <sys:Double x:Key="LineHeight_Table">22</sys:Double>

        <!--색상-->
        <Brush x:Key="BackgroundBrush_Left02">#FEBEBE</Brush>
        <Brush x:Key="BackgroundBrush_Left03">#78E6E6</Brush>
        <Brush x:Key="BackgroundBrush_Right01">#9BC3FF</Brush>
        <Brush x:Key="BackgroundBrush_Right02">#FFCCE5</Brush>
        <Brush x:Key="BackgroundBrush_Right03">#FFDAB9</Brush>

        <!--Thickness-->
        <Thickness x:Key="Thickness_TRB">0,1,1,1</Thickness>
        <Thickness x:Key="Thickness_LRB">1,0,1,1</Thickness>
        <Thickness x:Key="Thickness_LTR">1,1,1,0</Thickness>

        <Thickness x:Key="Thickness_TR">0,1,1,0</Thickness>
        <Thickness x:Key="Thickness_RB">0,0,1,1</Thickness>
        <Thickness x:Key="Thickness_TB">0,1,0,1</Thickness>

        <!--Border-->
        <Style x:Key="BorderStyle_Basic" TargetType="Border" >
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="BorderStyle_Black" TargetType="Border" BasedOn="{StaticResource BorderStyle_Basic}">
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>
        <Style x:Key="BorderStyle_Blue" TargetType="Border" BasedOn="{StaticResource BorderStyle_Basic}">
            <Setter Property="BorderBrush" Value="Blue"/>
        </Style>
        <Style x:Key="BorderStyle_Red" TargetType="Border" BasedOn="{StaticResource BorderStyle_Basic}">
            <Setter Property="BorderBrush" Value="Red"/>
        </Style>

        <Style x:Key="BorderStyle_Black_NormalHeight" TargetType="Border" BasedOn="{StaticResource BorderStyle_Black}">
            <Setter Property="Height" Value="{StaticResource LineHeight_Table}"/>
        </Style>
        <Style x:Key="BorderStyle_Blue_NormalHeight" TargetType="Border" BasedOn="{StaticResource BorderStyle_Blue}">
            <Setter Property="Height" Value="{StaticResource LineHeight_Table}"/>
        </Style>
        <Style x:Key="BorderStyle_Red_NormalHeight" TargetType="Border" BasedOn="{StaticResource BorderStyle_Red}">
            <Setter Property="Height" Value="{StaticResource LineHeight_Table}"/>
        </Style>

        <Style x:Key="BorderStyle_Black_NormalHeight_Width01" TargetType="Border" BasedOn="{StaticResource BorderStyle_Black_NormalHeight}">
            <Setter Property="Width" Value="50"/>
        </Style>
        <Style x:Key="BorderStyle_Black_NormalHeight_Width02" TargetType="Border" BasedOn="{StaticResource BorderStyle_Black_NormalHeight}">
            <Setter Property="Width" Value="75"/>
        </Style>
        <Style x:Key="BorderStyle_Black_NormalHeight_Width03" TargetType="Border" BasedOn="{StaticResource BorderStyle_Black_NormalHeight}">
            <Setter Property="Width" Value="65"/>
        </Style>

        <Style x:Key="BorderStyle_Blue_TRB" TargetType="Border" BasedOn="{StaticResource BorderStyle_Blue}">
            <Setter Property="BorderThickness" Value="0,1,1,1"/>
        </Style>
        <Style x:Key="BorderStyle_Blue_TR" TargetType="Border" BasedOn="{StaticResource BorderStyle_Blue}">
            <Setter Property="BorderThickness" Value="0,1,1,0"/>
        </Style>
        <Style x:Key="BorderStyle_Blue_LB" TargetType="Border" BasedOn="{StaticResource BorderStyle_Blue}">
            <Setter Property="BorderThickness" Value="1,0,0,1"/>
        </Style>
        <Style x:Key="BorderStyle_Blue_RB" TargetType="Border" BasedOn="{StaticResource BorderStyle_Blue}">
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
        <Style x:Key="BorderStyle_Blue_LRB" TargetType="Border" BasedOn="{StaticResource BorderStyle_Blue}">
            <Setter Property="BorderThickness" Value="1,0,1,1"/>
        </Style>

        <!--Button-->
        <Style x:Key="ButtonStyle_Basic" TargetType="Button">
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>

        <Style x:Key="ButtonStyle_TRB" TargetType="Button" BasedOn="{StaticResource ButtonStyle_Basic}">
            <Setter Property="BorderThickness" Value="0,1,1,1"/>
        </Style>
        <Style x:Key="ButtonStyle_LB" TargetType="Button" BasedOn="{StaticResource ButtonStyle_Basic}">
            <Setter Property="BorderThickness" Value="1,0,0,1"/>
        </Style>
        <Style x:Key="ButtonStyle_RB" TargetType="Button" BasedOn="{StaticResource ButtonStyle_Basic}">
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
        <Style x:Key="ButtonStyle_LRB" TargetType="Button" BasedOn="{StaticResource ButtonStyle_Basic}">
            <Setter Property="BorderThickness" Value="1,0,1,1"/>
        </Style>

        <Style x:Key="ButtonStyle_01" TargetType="Button">
            <Setter Property="FontSize" Value="{StaticResource AppFontSize_Normal}"/>
            <Setter Property="Height" Value="{StaticResource LineHeight_Table}"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="#8C8CFF"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="ButtonStyle_02" TargetType="Button">
            <Setter Property="FontSize" Value="{StaticResource AppFontSize_Normal}"/>
            <Setter Property="Height" Value="{StaticResource LineHeight_Table}"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="{StaticResource AppBrush_PinkBackground}"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="ButtonStyle_03" TargetType="Button">
            <Setter Property="FontSize" Value="{StaticResource AppFontSize_Normal}"/>
            <Setter Property="Height" Value="51"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="{StaticResource AppBrush_PinkBackground}"/>
        </Style>
        <Style x:Key="ButtonStyle_04" TargetType="Button">
            <Setter Property="FontSize" Value="{StaticResource AppFontSize_Normal}"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!--CheckBox-->
        <Style x:Key="CheckBoxStyle_Basic" TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="2,0,0,0"/>
            <Setter Property="Height" Value="{StaticResource LineHeight_Table}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!--ComboBox-->
        <Style x:Key="ComboBoxStyle_Basic" TargetType="ComboBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="{StaticResource LineHeight_Table}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SelectedIndex" Value="0"/>
        </Style>

        <!--Image-->
        <Style x:Key="ImageSizeMid" TargetType="Image">
            <Setter Property="Width" Value="22"/>
        </Style>
        <Style x:Key="ImageSizeSmall" TargetType="Image">
            <Setter Property="Width" Value="18"/>
        </Style>

        <!--Radio Button-->
        <Style x:Key="RadioBtnStyle" TargetType="RadioButton">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Italic" />
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="IsThreeState"  Value="False"/>
            <Setter Property="Height" Value="22"/>
        </Style>

        <!--ScrollViwer-->
        <Style x:Key="ScrollViwerStyle" TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Visible"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!--TextBlock-->
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource AppFontSize_Normal}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!--TextBox-->
        <Style x:Key="TextBoxStyle_Empty" TargetType="TextBox">
            <Setter Property="FontSize" Value="{StaticResource AppFontSize_Normal}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="{StaticResource AppFontSize_Normal}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="{StaticResource LineHeight_Table}"/>
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>
        <Style x:Key="TextBoxStyle_Fee" TargetType="TextBox">
            <Setter Property="FontSize" Value="{StaticResource AppFontSize_Normal}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="{StaticResource LineHeight_Table}"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="TextBoxStyle_Small" TargetType="TextBox">
            <Setter Property="FontSize" Value="{StaticResource AppFontSize_Normal}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>
    </Window.Resources>

    <Grid HorizontalAlignment="Left" Margin="5">
        <Grid.Resources>
            <GridLength x:Key="RowHeight_01">22</GridLength>
        </Grid.Resources>

        <!--전체를 2개의 로우로-->
        <Grid.RowDefinitions>
            <RowDefinition Height="550"/>
            <!--기존 데이터+버튼-->
            <RowDefinition Height="*"/>
            <!--데이터그리드-->
        </Grid.RowDefinitions>

        <!--#region R0-기존영역 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="885" />
                <!--데이타-->
                <ColumnDefinition Width="102" />
                <!--버튼-->
            </Grid.ColumnDefinitions>

            <!--#region C0-좌측열(데이타) -->
            <Grid Grid.Column="0" VerticalAlignment="Top">
                <!--2개의 행으로-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="46"/>
                    <!--고객정보-->
                    <RowDefinition Height="585"/>
                    <!--주문내역-->
                </Grid.RowDefinitions>

                <!--C0-R0 검색명-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="265"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--검색-->
                    <TextBox x:Name="TBoxHeader_Search" Grid.Column="0" TabIndex="1"
                         Width="265" FontSize="25" FontWeight="Bold"
                         Background="Black" Foreground="{Binding Background, ElementName=GridHeaderInfo}" BorderBrush="Black"
                         SelectionBrush="White"
                         VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         KeyDown="TBoxHeader_Search_KeyDown" />

                    <!--오더상태/오더번호/메모/접수자/현재시각 영역-->
                    <Grid Grid.Column="1" x:Name="GridHeaderInfo" Margin="2,0,3,0" UseLayoutRounding="True"
                      Background="{Binding OrderState, Converter={StaticResource OrderStateToBackgroundConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <!--수신제한 버튼-->
                        <Button x:Name="BtnNoRcvTel" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Click="BtnNoRcvTel_Click"
                            Width="30" Background="{Binding Background, ElementName=GridHeaderInfo}" BorderBrush="Blue" BorderThickness="1">
                            <Image Source="\Resources\Images\Tel006.png" Width="{StaticResource AppItemHeight_Normal}"/>
                        </Button>

                        <!--오더상태-->
                        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource BorderStyle_Blue}">
                            <TextBlock x:Name="TBlkOrderState"
                                   Text="{Binding OrderState, FallbackValue=접수}" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <!--오더번호-->
                        <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource BorderStyle_Blue_TR}">
                            <TextBlock Text="오더번호" Style="{StaticResource TextBlockStyle}"/>
                        </Border>
                        <Border Grid.Column="3" Grid.Row="0" Style="{StaticResource BorderStyle_Blue_TR}">
                            <TextBlock x:Name="TBlkSeqNo" Style="{StaticResource TextBlockStyle}"
                                   Text="0" FontWeight="DemiBold" Foreground="Blue"/>
                        </Border>

                        <!--접수자-->
                        <Border Grid.Column="4" Grid.Row="0" Style="{StaticResource BorderStyle_Blue_TR}">
                            <TextBlock Text="접수자" Style="{StaticResource TextBlockStyle}" />
                        </Border>
                        <Border Grid.Column="5" Grid.Row="0" Style="{StaticResource BorderStyle_Blue_TR}">
                            <TextBlock x:Name="TBlkRegister"
                                   Text="" Style="{StaticResource TextBlockStyle}" Foreground="Blue"/>
                        </Border>

                        <!--현재시각-->
                        <Border Grid.Column="6" Grid.Row="0" Style="{StaticResource BorderStyle_Blue_TR}">
                            <TextBlock x:Name="TBlkDrNow" Text="0000-00-00 00:00:00" Style="{StaticResource TextBlockStyle}"/>
                        </Border>

                        <!--메모-->
                        <Border Grid.Column="2" Grid.Row="1" Style="{StaticResource BorderStyle_Blue_TRB}">
                            <TextBlock Text="고객메모" Style="{StaticResource TextBlockStyle}"/>
                        </Border>
                        <Border Grid.Column="3" Grid.ColumnSpan="4" Grid.Row="1" Style="{StaticResource BorderStyle_Blue_TRB}">
                            <TextBlock x:Name="TBlkCallCustMemoExt" Style="{StaticResource TextBlockStyle}"
                                   FontWeight="DemiBold" Foreground="Red"/>
                        </Border>
                    </Grid>
                </Grid>

                <!--C0-R1 고객, 출발지, 도착지-->
                <Grid Grid.Row="1" Margin="{StaticResource AppMargin0100}">
                    <!--행3을 2개의 열로 오더정보-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="431" />
                        <ColumnDefinition Width="453" />
                    </Grid.ColumnDefinitions>

                    <!--#region C0-R2-C0 오더정보 좌측(의뢰지, 출,도착지) 3개의 행으로  -->
                    <Grid Grid.Column="0" Margin="{StaticResource AppMargin0100}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="129"/>
                            <RowDefinition Height="186"/>
                            <RowDefinition Height="186"/>
                        </Grid.RowDefinitions>

                        <!-- 의뢰지 -->
                        <Grid Grid.Row="0" Margin="{StaticResource AppMargin0100}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="{StaticResource RowHeight_01}"/>
                                <RowDefinition Height="{StaticResource RowHeight_01}"/>
                                <RowDefinition Height="{StaticResource RowHeight_01}"/>
                                <RowDefinition Height="{StaticResource RowHeight_01}"/>
                                <RowDefinition Height="37"/>
                            </Grid.RowDefinitions>

                            <!--고객, 동명-->
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <!--고객-->
                                <Border Style="{StaticResource BorderStyle_Black_NormalHeight_Width01}" Background="LightGray" BorderThickness="1">
                                    <TextBlock Text="고객" Style="{StaticResource TextBlockStyle}" Foreground="red"/>
                                </Border>
                                <TextBox x:Name="Caller_TBoxCustName" TabIndex="3"
                                     Text="{Binding CallCustName, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                     Style="{StaticResource TextBoxStyle}" Width="165" BorderThickness="{StaticResource Thickness_TRB}"/>

                                <!--동명-->
                                <Border Style="{StaticResource BorderStyle_Black_NormalHeight_Width01}" Background="LightGray" BorderThickness="{StaticResource Thickness_TRB}">
                                    <TextBlock Text="동명" Style="{StaticResource TextBlockStyle}" Foreground="red"/>
                                </Border>
                                <TextBox x:Name="Caller_TBoxDongBasic" TabIndex="3"
                                     Text="{Binding CallDongBasic, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                     Style="{StaticResource TextBoxStyle}" Width="166" BorderThickness="{StaticResource Thickness_TRB}"/>
                            </StackPanel>

                            <!--전화, 전화2-->
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <!--전화1-->
                                <Border Style="{StaticResource BorderStyle_Black_NormalHeight_Width01}" Background="LightGray" BorderThickness="{StaticResource Thickness_LRB}">
                                    <TextBlock Text="전화" Style="{StaticResource TextBlockStyle}" Foreground="red"/>
                                </Border>

                                <TextBox x:Name="Caller_TBoxTelNo1"
                                     Text="{Binding CallTelNo, Mode=TwoWay, Converter={StaticResource PhoneNumberConverter}, UpdateSourceTrigger=LostFocus}"
                                     Style="{StaticResource TextBoxStyle}" Width="105" BorderThickness="{StaticResource Thickness_RB}"
                                     InputMethod.IsInputMethodEnabled="False"
                                     PreviewTextInput="TBoxOnlyNum_PreviewTextInput" DataObject.Pasting="TBoxOnlyNum_Pasting"
                                     GotFocus="Tel_TBoxAll_GotFocus" LostFocus="Tel_TBoxAll_LostFocus" />

                                <Button Width="30" 
                                    Style="{StaticResource ButtonStyle_02}" BorderThickness="{StaticResource Thickness_RB}">
                                    <Image Source="\Resources\Images\Arrow_Down002.png" Style="{StaticResource ImageSizeSmall}"/>
                                </Button>

                                <Button x:Name="Caller_BtnTelNo1" Width="30" 
                                    Style="{StaticResource ButtonStyle_02}" BorderThickness="{StaticResource Thickness_RB}">
                                    <Image Source="\Resources\Images\Tel003.png" Style="{StaticResource ImageSizeSmall}"/>
                                </Button>

                                <!--전화2-->
                                <Border Style="{StaticResource BorderStyle_Black_NormalHeight_Width01}" Background="LightGray" BorderThickness="{StaticResource Thickness_RB}">
                                    <TextBlock Text="전화2" Style="{StaticResource TextBlockStyle}"/>
                                </Border>

                                <TextBox x:Name="Caller_TBoxTelNo2"
                                     Text="{Binding CallTelNo2, Mode=TwoWay, Converter={StaticResource PhoneNumberConverter}, UpdateSourceTrigger=LostFocus}"
                                     Style="{StaticResource TextBoxStyle}" Width="166" BorderThickness="{StaticResource Thickness_RB}"
                                     InputMethod.IsInputMethodEnabled="False"
                                     PreviewTextInput="TBoxOnlyNum_PreviewTextInput" DataObject.Pasting="TBoxOnlyNum_Pasting"
                                     GotFocus="Tel_TBoxAll_GotFocus" LostFocus="Tel_TBoxAll_LostFocus" />
                            </StackPanel>

                            <!--부서, 담당-->
                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <!--부서-->
                                <Border Style="{StaticResource BorderStyle_Black_NormalHeight_Width01}" Background="LightGray" BorderThickness="{StaticResource Thickness_LRB}">
                                    <TextBlock Text="부서" Style="{StaticResource TextBlockStyle}"/>
                                </Border>

                                <TextBox x:Name="Caller_TBoxDeptName"
                                     Text="{Binding CallDeptName, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                     Style="{StaticResource TextBoxStyle}" Width="165" BorderThickness="{StaticResource Thickness_RB}" />

                                <!--담당-->
                                <Border Style="{StaticResource BorderStyle_Black_NormalHeight_Width01}" Background="LightGray" BorderThickness="{StaticResource Thickness_RB}">
                                    <TextBlock Text="담당" Style="{StaticResource TextBlockStyle}"/>
                                </Border>

                                <TextBox x:Name="Caller_TBoxChargeName"
                                     Text="{Binding CallChargeName, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                     Style="{StaticResource TextBoxStyle}" Width="166" BorderThickness="{StaticResource Thickness_RB}" />
                            </StackPanel>

                            <!--주소-->
                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                <Border Style="{StaticResource BorderStyle_Black_NormalHeight_Width01}" Background="LightGray" BorderThickness="{StaticResource Thickness_LRB}">
                                    <TextBlock Text="주소" Style="{StaticResource TextBlockStyle}" />
                                </Border>

                                <TextBox x:Name="Caller_TBoxDongAddr" TabIndex="2"
                                     Text="{Binding CallAddress, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                     Style="{StaticResource TextBoxStyle}" Width="347" BorderThickness="{StaticResource Thickness_RB}"/>

                                <Button x:Name="BtnSearchCustAddr" Width="34" 
                                    Style="{StaticResource ButtonStyle_02}" BorderThickness="{StaticResource Thickness_RB}">
                                    <Image Source="\Resources\Images\Position001.png" Style="{StaticResource ImageSizeMid}"/>
                                </Button>
                            </StackPanel>

                            <!--적요-->
                            <StackPanel Grid.Row="4" Orientation="Horizontal">
                                <Border Style="{StaticResource BorderStyle_Black}" Width="50" Height="37" Background="LightGray" BorderThickness="{StaticResource Thickness_LRB}">
                                    <TextBlock Text="적요" Style="{StaticResource TextBlockStyle}" />
                                </Border>

                                <Border Style="{StaticResource BorderStyle_Black}" Width="381" Height="37" Background="Transparent" BorderThickness="{StaticResource Thickness_RB}" >
                                    <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Background="Transparent">
                                        <TextBox x:Name="Caller_TBoxRemarks" TabIndex="9"
                                             Text="{Binding CallRemarks, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                             TextWrapping="Wrap" AcceptsReturn="True"
                                             Style="{StaticResource TextBoxStyle_Empty}" Width="365" Height="36"/>
                                    </ScrollViewer>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- 출발지 -->
                        <Grid Grid.Row="1" Margin="{StaticResource AppMargin0100}">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="{StaticResource RowHeight_01}"/>
                                <RowDefinition Height="{StaticResource RowHeight_01}"/>
                                <RowDefinition Height="{StaticResource RowHeight_01}"/>
                                <RowDefinition Height="{StaticResource RowHeight_01}"/>
                                <RowDefinition Height="{StaticResource RowHeight_01}"/>
                                <RowDefinition Height="{StaticResource RowHeight_01}"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>

                            <!--출발지-->
                            <StackPanel Grid.Row="0" Orientation="Horizontal">

                                <!--출발지(Text)-->
                                <Image Source="\Resources\Images\Customer001.png" Style="{StaticResource ImageSizeSmall}" Margin="5,0,0,0"/>
                                <TextBlock Text="출발지" Margin="5,0,0,0" Style="{StaticResource TextBlockStyle}"
                                       FontWeight="DemiBold" Foreground="Blue" Width="55" />

                                <!--검색-->
                                <Button x:Name="Start_BtnSearch" Content="검색" Width="45" 
                                    Style="{StaticResource ButtonStyle_02}" BorderThickness="{StaticResource Thickness_LTR}"
                                    />

                                <TextBox x:Name="Start_TBoxSearch" TabIndex="10" KeyDown="Start_TBoxSearch_KeyDown"
                                     Style="{StaticResource TextBoxStyle}" Width="269" BorderThickness="{StaticResource Thickness_TR}" />

                                <Button x:Name="Start_BtnStart" Width="34" 
                                    Style="{StaticResource ButtonStyle_02}" BorderThickness="{StaticResource Thickness_TR}"
                                    >
                                    <Image Source="\Resources\Images\Play007.png" Style="{StaticResource ImageSizeMid}"/>
                                </Button>
                            </StackPanel>

                            <!--버튼들-->
                            <StackPanel Grid.Row="1" Orientation="Horizontal">

                                <!--출발지지우기-->
                                <Button x:Name="Start_BtnErase" Content="출발지지우기" Width="144" Click="Start_BtnErase_Click"
                                    Style="{StaticResource ButtonStyle_02}" BorderThickness="1"
                                    />

                                <!--주거래처등록-->
                                <Button x:Name="Start_BtnRegComp" Content="주거래처등록" Width="144" Click="Start_BtnRegComp_Click"
                                    Style="{StaticResource ButtonStyle_02}" BorderThickness="{StaticResource Thickness_TRB}"
                                    />

                                <!--출도착전환-->
                                <Button x:Name="Start_BtnSwap"  Width="143" Click="StartDest_BtnSwap_Click"
                                    Style="{StaticResource ButtonStyle_02}" BorderThickness="{StaticResource Thickness_TRB}"
                                    >
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="\Resources\Images\Rotation001.png" Style="{StaticResource ImageSizeSmall}"/>
                                        <TextBlock Text="  출도착전환  " Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!--고객, 담당-->
                            <StackPanel Grid.Row="2" Orientation="Horizontal">

                                <!--고객-->
                                <Border Style="{StaticResource BorderStyle_Black_NormalHeight_Width01}" Background="{StaticResource BackgroundBrush_Left02}" BorderThickness="{StaticResource Thickness_LRB}">
                                    <TextBlock Text="고객" Style="{StaticResource TextBlockStyle}" Foreground="red"/>
                                </Border>

                                <TextBox x:Name="Start_TBoxCustName" TabIndex="11"
