<Window x:Class="Kai.Client.CallCenter.Windows.ImageToCharWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kai.Client.CallCenter.Windows"
        mc:Ignorable="d"
        Title="ImageToCharWnd" Height="330" Width="420" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"
                BorderThickness="1" BorderBrush="Black" Margin="0" Width="370" Height="90">
            <Image Name="ImgString" Margin="5" Width="360" Height="80" Stretch="None"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                BorderThickness="1" BorderBrush="Black" Margin="0" Width="150" Height="150">
                <Image Name="ImgChar" Margin="5" Width="140" Height="140" Stretch="None"/>
            </Border>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                    <Label Content="문자" Height="25" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                    <TextBox x:Name="TBoxChar" Width="50" Height="25" Margin="0,0,0,0" 
                         HorizontalAlignment="Left" VerticalContentAlignment="Center"
                         PreviewTextInput="TBoxChar_PreviewTextInput" TextChanged="TBoxChar_TextChanged"/>

                    <Label Content="타입" Height="25" Margin="10,0,0,0" HorizontalAlignment="Right"/>
                    <TextBox x:Name="TBoxCharType" Width="35" Height="25" Margin="0,0,0,0" IsReadOnly="True"
                         HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                </StackPanel>

                <Button x:Name="BtnSave" Content="저장" Width="128" Height="25" Margin="0,20,0,0"
                        Click="BtnSave_Click"/>
                <Button x:Name="BtnOpen" Content="건너뜀" Width="128" Height="25" Margin="0,20,0,0"
                        Click="BtnJump_Click"/>
                <Button x:Name="BtnConvert" Content="전부 취소" Width="128" Height="25" Margin="0,5,0,0"
                        Click="BtnCancelAll_Click"/>
            </StackPanel>
        </Grid>


        <!--


            </Grid>

            <StackPanel Grid.Row="1" Orientation="Vertical">


            </StackPanel>
        </Grid>-->

    </Grid>
</Window>
