<Window x:Class="Kai.Client.CallCenter.Windows.ImageToCheckState"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kai.Client.CallCenter.Windows"
        mc:Ignorable="d"
        Title="ImageToCheckState" Height="820" Width="1200"  
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="180" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
        BorderThickness="1" BorderBrush="Black" Margin="10"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Viewbox Stretch="Uniform">
                <Grid>
                    <Image x:Name="ImgDisplay" Stretch="Fill"/>
                    <Canvas x:Name="OverlayCanvas" IsHitTestVisible="False"/>
                </Grid>
            </Viewbox>
        </Border>

        <Border Grid.Row="1"
                BorderThickness="1" BorderBrush="Black" Margin="10,0,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image Name="BoolDisplay" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Border>

        <Border Grid.Row="2"
                BorderThickness="1" BorderBrush="Black" Margin="10,0,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!--Left-->
                <Grid Grid.Column="0" Margin="5,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Label -->
                        <RowDefinition Height="*"/>
                        <!-- TextBox -->
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="분석정보"/>
                    <TextBox Grid.Row="1" x:Name="TBoxInfo01"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
                </Grid>

                <!--Center-->
                <Grid Grid.Column="1" Margin="5,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Label -->
                        <RowDefinition Height="*"/>
                        <!-- TextBox -->
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="DB정보"/>
                    <TextBox Grid.Row="1" x:Name="TBoxInfo02"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
                </Grid>

                <!--Right-->
                <StackPanel Grid.Column="2" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="5,10,0,0">
                        <Label Content="위치"/>
                        <TextBox x:Name="TBoxPos" Width="230" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                        <Label Content="저장"/>

                        <Border BorderBrush = "{StaticResource AppColor_GrayBorder}" BorderThickness="1"  Width="230" Height="{StaticResource AppItemHeight_Normal}" >
                            <ComboBox x:Name="CmbBoxSave" 
                                  BorderThickness="0" HorizontalAlignment="Left" Width="230" SelectedIndex="0">
                                <ComboBoxItem Content = "Checked" />
                                <ComboBoxItem Content="Unchecked"/>
                            </ComboBox>
                        </Border>
                    </StackPanel> 

                    <Button Content="실행" Canvas.Left="650" Canvas.Top="10" Width="250" Margin="0,35,0,0"
                        x:Name="BtnExex" Click="BtnExex_Click"/>

                    <Button Content="닫기" Canvas.Left="650" Canvas.Top="35" Width="250" Margin="0,5,0,0"
                        x:Name="BtnClose" Click="BtnClose_Click"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
