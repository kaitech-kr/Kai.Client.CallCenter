<Page x:Class="Kai.Client.CallCenter.Pages.Company_RegistPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kai.Client.CallCenter.Pages"
      mc:Ignorable="d" 
      xmlns:vs="clr-namespace:Kai.Client.CallCenter.MVVM.ViewServices"
      xmlns:sys="clr-namespace:System;assembly=netstandard"  
      d:DesignHeight="900" d:DesignWidth="1415"
      Title="거래처등록" Background="LightGray"
      Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <Page.DataContext>
        <vs:VsCompany_RegistPage/>
    </Page.DataContext>

    <!--#region Resources -->
    <Page.Resources>

        <!--버튼-->
        <Style x:Key="NormalBtnStyle" TargetType="Button" BasedOn="{StaticResource AppButtonStyle_Normal}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="PinkNormalBtnStyle" TargetType="Button" BasedOn="{StaticResource NormalBtnStyle}">
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="Background" Value="{StaticResource AppBrush_PinkBackground}"/>
        </Style>

        <!--큰 이미지버튼-->
        <!--<Style x:Key="EnabledBigImageBtnStyle" TargetType="Button" >
            <Setter Property="FontFamily" Value="Italic"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>-->

        <!--<Style x:Key="DisabledBigImageBtnStyle" TargetType="Button" BasedOn="{StaticResource EnabledBigImageBtnStyle}">
            <Setter Property="Opacity" Value="0.45"/>
        </Style>-->

        <!--이미지-->
        <!--<Style x:Key="NormalImageSizeStyle" TargetType="Image">
            <Setter Property="Width" Value="16"/>
        </Style>-->
        <!--<Style x:Key="BigImageSizeStyle" TargetType="Image">
            <Setter Property="Width" Value="30"/>
        </Style>-->

        <Style x:Key="BigImageStyle" TargetType="Image">
            <Setter Property="Height" Value="{StaticResource AppImageHeight_Big}"/>
            <Setter Property="Width" Value="{StaticResource AppImageHeight_Big}"/>
        </Style>

        <!--<Style x:Key="BigImgBtnStyle" TargetType="Button" BasedOn="{StaticResource AppTriggerBtnStyle_Normal}">
            <Setter Property="Width" Value="65"/>
            <Setter Property="Height" Value="{StaticResource AppImgBtnHeight_Big}"/>
        </Style>-->

        <!--라벨-->
        <Style TargetType="Label" x:Key="RedBorderLabelStyle" BasedOn="{StaticResource AppLabelStyle_Normal}">
            <Setter Property="BorderBrush" Value="Red"/>
        </Style>
        <Style TargetType="Label" x:Key="BlueBorderLabelStyle" BasedOn="{StaticResource AppLabelStyle_Normal}">
            <Setter Property="BorderBrush" Value="Blue"/>

        </Style>
        <Style TargetType="Label" x:Key="BlueGreenLabelStyle" BasedOn="{StaticResource AppLabelStyle_Normal}">
            <Setter Property="BorderBrush" Value="Blue"/>
            <Setter Property="Background" Value="LawnGreen"/>
        </Style>

        <!--텍스트박스-->
        <Style x:Key="NormalTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource AppTextBoxStyle_Normal}">
            <Setter Property="BorderBrush" Value="{StaticResource AppColor_GrayBorder}"/>
            <Setter Property="Margin" Value="2,0,0,0"/>
        </Style>
        <Style x:Key="ReadOnlyNormalTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource NormalTextBoxStyle}">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="{StaticResource AppBrush_DisableBackground}"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
        <Style x:Key="ReadOnlyScrollViewTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource NormalTextBoxStyle}">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <!--텍스트블럭-->
        <Style x:Key="NormalTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource AppTextBlockStyle_Normal}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!--콤보박스-->
        <Style x:Key="NormalComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource  AppComboBoxStyle_Normal}">
            <Setter Property="Margin" Value="2,0,0,0"/>
            <Setter Property="SelectedIndex" Value="0"/>
        </Style>

        <!--Border-->
        <Style x:Key="NormalBorderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="{StaticResource AppItemHeight_Normal}"/>
        </Style>

        <!--라디오버튼-->
        <!--<Style TargetType="RadioButton" x:Key="RadioBtnStyle">
            <Setter Property="FontSize" Value="{StaticResource FontSize_Normal}"/>
            <Setter Property="Height" Value="{StaticResource ItemHeight_Normal}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="IsThreeState"  Value="False"/>
            <Setter Property="FontFamily" Value="Italic"/>
        </Style>-->

        <!--CheckBox-->
        <!--<Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="{StaticResource FontSize_Normal}"/>
            <Setter Property="Height" Value="{StaticResource ItemHeight_Normal}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Italic"/>
            <Setter Property="IsThreeState" Value="False"/>
        </Style>-->
    </Page.Resources>
    <!--#endregion Resources-->

    <!--#region Render -->
    <Grid Margin="5,0">
        <!--#region 전체 행을 2개로 분할 -->
        <Grid.RowDefinitions>
            <!--헤더-->
            <RowDefinition Height="70"/>
            <!--바디-->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--#region Grid_Header Header를 2개의 열로 분할-->
        <Grid Grid.Row="0" x:Name="Grid_Header">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="500"/>
            </Grid.ColumnDefinitions>

            <!--#region Header_Left를 2개의 행으로 분할  -->
            <Grid Grid.Column="0" x:Name="Header_Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--좌측 헤더 위 행-->
                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Bottom"  Margin="0,0,0,1">
                    <!--라벨 거래처명-->
                    <Label Content="거래처명" Style="{StaticResource RedBorderLabelStyle}" Width="80"/>
                    <!--텍스트박스 거래처명-->
                    <TextBox x:Name="TBoxSearch_CompName" Style="{StaticResource NormalTextBoxStyle}" Width="100"/>

                    <!--라벨 거래구분-->
                    <Label Content="거래구분" Style="{StaticResource RedBorderLabelStyle}" Width="80" Margin="10,0,0,0"/>
                    <!--콤보박스 거래구분-->
                    <ComboBox x:Name="CmbBoxSearch_TradeType" 
                              Style="{StaticResource NormalComboBoxStyle}"  Width="70">
                        <ComboBoxItem Content="전체"/>
                        <ComboBoxItem Content="현금"/>
                        <ComboBoxItem Content="신용"/>
                        <ComboBoxItem Content="카드"/>
                    </ComboBox>

                    <!--라벨 업체구분-->
                    <Label Content="업체구분" Style="{StaticResource RedBorderLabelStyle}" Width="80" Margin="10,0,0,0"/>
                    <!--콤보박스 업체구분-->
                    <ComboBox x:Name="CmbBoxSearch_CustType"
                              Style="{StaticResource NormalComboBoxStyle}" 
                              Width="70" SelectedIndex="0">
                        <ComboBoxItem Content="전체"/>
                    </ComboBox>

                    <!--버튼 업체구분-->
                    <Button x:Name="BtnSearch_CustType" 
                            Content="업체구분" Width="80" 
                            Style="{StaticResource PinkNormalBtnStyle}" Margin="10,0,0,0"/>

                    <!--버튼 NICE자료전송-->
                    <Button x:Name="BtnSearch_SendData" 
                            Content="NICE자료전송" Width="100" 
                            Style="{StaticResource PinkNormalBtnStyle}" Margin="5,0,0,0"/>
                </StackPanel>

                <!--좌측 헤더 아래 행-->
                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top"  Margin="0,1,0,0">
                    <Border Style="{StaticResource NormalBorderStyle}" Width="344">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="RdoBtnSearch_Total" 
                                         Content="고객전체"
                                         Style="{StaticResource AppRadioBtnStyle_Normal}" 
                                         Margin="20,0,0,0"
                                         IsChecked="True" Checked="RdoBtnTotCust_Checked"/>
                            <RadioButton x:Name="RdoBtnSearch_UseOnly"
                                         Content="사용고객" 
                                         Style="{StaticResource AppRadioBtnStyle_Normal}"
                                         Margin="25,0,0,0" Checked="RdoBtnUseCust_Checked"/>
                            <RadioButton x:Name="RdoBtnSearch_NotUse"
                                         Content="사용중지고객" 
                                         Style="{StaticResource AppRadioBtnStyle_Normal}"
                                         Margin="25,0,0,0" Checked="RdoBtnNotUseCust_Checked"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
            <!--#endregion End Header_Left-->

            <!--#region Header_Right 분할없음-->
            <StackPanel Grid.Column="1" x:Name="Header_Right"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,0">

                <!--삭제 버튼-->
                <Button x:Name="BtnDelete" 
                        Style="{StaticResource AppBtnStyle_Disabled}" 
                        Click="BtnDelete_Click"
                        Margin="10,5,70,5">
                    <StackPanel>
                        <Image Source="\Resources\Images\Delete003.png" Style="{StaticResource BigImageStyle}"/>
                        <TextBlock Text="삭제" Style="{StaticResource NormalTextBlockStyle}"/>
                    </StackPanel>
                </Button>

                <!--신규 버튼-->
                <Button x:Name="BtnNewCust"
                        Style="{StaticResource AppBtnStyle_Enabled}"
                        Click="BtnNewCust_Click"
                        Margin="50,5,0,5">
                    <StackPanel>
                        <Image Source="\Resources\Images\Pencil001.png" Style="{StaticResource BigImageStyle}"/>
                        <TextBlock Text="신규" Style="{StaticResource NormalTextBlockStyle}"/>
                    </StackPanel>
                </Button>

                <!--조회 버튼-->
                <Button x:Name="BtnSearch"
                        Style="{StaticResource AppBtnStyle_Enabled}" 
                        Click="BtnSearch_Click"
                        Margin="30,5,0,5">
                    <StackPanel>
                        <Image Source="\Resources\Images\Search002.png" Style="{StaticResource BigImageStyle}"/>
                        <TextBlock Text="조회" Style="{StaticResource NormalTextBlockStyle}"/>
                    </StackPanel>
                </Button>

                <!--저장-->
                <Button x:Name="BtnSave" 
                        Style="{StaticResource AppBtnStyle_Disabled}"
                        Click="BtnSave_Click"
                        Margin="30,5,0,5">
                    <StackPanel>
                        <Image Source="\Resources\Images\Save003.png" Style="{StaticResource BigImageStyle}"/>
                        <TextBlock Text="저장" Style="{StaticResource NormalTextBlockStyle}"/>
                    </StackPanel>
                </Button>

                <!--엑셀 버튼-->
                <Button x:Name="BtnExcel" 
                        Style="{StaticResource AppBtnStyle_Disabled}"
                        Click="BtnExcel_Click"
                        Margin="30,5,0,5">
                    <StackPanel>
                        <Image Source="\Resources\Images\Excel001.png" Style="{StaticResource BigImageStyle}"/>
                        <TextBlock Text="엑셀" Style="{StaticResource NormalTextBlockStyle}"/>
                    </StackPanel>
                </Button>

                <!--닫기 버튼-->
                <Button x:Name="BtnClose" 
                        Style="{StaticResource AppBtnStyle_Enabled}"
                        Click="BtnClose_Click" 
                        Margin="30,5,0,5">
                    <StackPanel>
                        <Image Source="\Resources\Images\Close001.png" Style="{StaticResource BigImageStyle}"/>
                        <TextBlock Text="닫기" Style="{StaticResource NormalTextBlockStyle}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <!--#endregion End Header_Right-->
        </Grid>
        <!--#endregion End Grid_Header-->

        <!--#region Grid_Body를 2개의 열로 분할 -->
        <Grid Grid.Row="1" x:Name="Grid_Body">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="790"/>
            </Grid.ColumnDefinitions>

            <!--#region Body_Left 분할없음-->
            <Grid Grid.Column="0" x:Name="Body_Left" Margin="0,1,3,0">
                <DataGrid x:Name="DGridCompany" ItemsSource="{Binding oc_VmCompany_RegistPage_Comp}" 
                          Style="{StaticResource AppDatagridStyle_Normal}" 
                          CellStyle="{StaticResource AppCellStyle_Normal}" 
                          ColumnHeaderStyle="{StaticResource AppColumnHeaderStyle_Normal}"
                          LoadingRow="DGridCompany_LoadingRow" SelectionChanged="DGridCompany_SelectionChanged" Margin="-7,-12,7,12">

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="번호" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, 
                                       Path=Header}" 
                                       HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="코드" Binding="{Binding KeyCode}" Width="80" ElementStyle="{StaticResource AppDataGridTextColumnStyle_Center}"/>
                        <DataGridTextColumn Header="거래처명" Binding="{Binding CompName}" Width="150" ElementStyle="{StaticResource AppDataGridTextColumnStyle_Left}"/>
                        <DataGridTextColumn Header="전화번호" Binding="{Binding TelNo}" Width="110" ElementStyle="{StaticResource AppDataGridTextColumnStyle_Center}"/>
                        <DataGridTextColumn Header="이월미수" Width="80" />
                        <DataGridTextColumn Header="현재미수" Width="80" />
                        <DataGridTextColumn Header="대표자" Binding="{Binding Owner}" Width="80" ElementStyle="{StaticResource AppDataGridTextColumnStyle_Center}" />
                        <DataGridTextColumn Header="거래" Binding="{Binding TradeType}" Width="60" ElementStyle="{StaticResource AppDataGridTextColumnStyle_Center}"/>
                        <DataGridTextColumn Header="할인" Width="80" />
                        <DataGridTextColumn Header="동명" Width="80" />
                        <DataGridTextColumn Header="상세위치" Width="80" />
                        <DataGridTextColumn Header="업체타입" Width="80" />
                        <DataGridTextColumn Header="DC타입" Binding="{Binding DiscountType}" Width="80" />
                        <DataGridTextColumn Header="부가세" Width="80" />
                        <DataGridTextColumn Header="등록일자" Binding="{Binding DtRegist}" Width="100" ElementStyle="{StaticResource AppDataGridTextColumnStyle_Center}" /> 
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <!--#endregion End Body_Right-->

            <!--#region Body_Right를 2개의 행으로 분할 -->
            <Grid Grid.Column="1" x:Name="Body_Right" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="370"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region Right_Upper 많은 행으로 분할-->
                <Grid Grid.Row="0" x:Name="Grid_Right_Upper"  IsEnabled="false">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="27"/>
                        <RowDefinition Height="27"/>
                        <RowDefinition Height="27"/>
                        <RowDefinition Height="27"/>
                        <RowDefinition Height="27"/>
                        <RowDefinition Height="27"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="27"/>
                        <RowDefinition Height="27"/>
                    </Grid.RowDefinitions>

                    <!--#region Row - 0 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <!--라벨 거래처명-->
                        <Label Content="거래처명" Style="{StaticResource BlueGreenLabelStyle}" Foreground="Red" Width="80"/>
                        <!--텍스트박스 거래처명-->
                        <TextBox x:Name="TBoxWrite_CompName" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="200"/>

                        <!--// 라벨 대표자-->
                        <Label Content="대표자" Style="{StaticResource BlueBorderLabelStyle}"  Foreground="Red" Width="80" Margin="10,0,0,0"/>
                        <!--// 텍스트박스 대표자-->
                        <TextBox x:Name="TBoxWrite_CEOName" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="160"/>

                        <!--라벨 담당자-->
                        <Label Content="담당자" Style="{StaticResource BlueBorderLabelStyle}" Foreground="Black" Width="80" Margin="10,0,0,0"/>
                        <!--// 텍스트박스 담당자-->
                        <TextBox x:Name="TBoxWrite_ChargeNmae" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="160"/>
                    </StackPanel>
                    <!--#endregion End Row - 0  -->

                    <!--#region Row - 1 -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <!--라벨 전화번호-->
                        <Label Content="전화번호" Style="{StaticResource BlueBorderLabelStyle}" Foreground="Red" Width="80"/>
                        <!--// 텍스트박스 전화번호-->
                        <TextBox x:Name="TBoxWrite_TelNo" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="200"/>

                        <!--라벨 팩스번호-->
                        <Label Content="팩스번호" Style="{StaticResource BlueBorderLabelStyle}" Width="80" Margin="10,0,0,0"/>
                        <!--텍스트박스 팩스번호-->
                        <TextBox x:Name="TBoxWrite_FaxNo" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="160"/>

                        <!--라벨 사업자번호-->
                        <Label Content="사업자번호" Style="{StaticResource BlueBorderLabelStyle}" Width="80" Margin="10,0,0,0"/>
                        <!--/텍스트박스 팩스번호-->
                        <TextBox x:Name="TBoxWrite_BusinessNo" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="160"/>
                    </StackPanel>
                    <!--#endregion End Row - 1  -->

                    <!--#region Row - 2 -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <!--라벨 할인적용-->
                        <Label Content="할인타입" Style="{StaticResource BlueGreenLabelStyle}" Foreground="Black" Width="80"/>

                        <!--콤보박스 DC구분-->
                        <ComboBox x:Name="CmbBoxWrite_DiscountType" 
                                  Style="{StaticResource NormalComboBoxStyle}" BorderBrush="Black" BorderThickness="1"
                                  Width="108">
                            <ComboBoxItem Content="할인"/>
                            <ComboBoxItem Content="마일리지"/>
                            <ComboBoxItem Content="없음"/>
                        </ComboBox>
                        <!--텍스트박스 할인액기준-->
                        <TextBox x:Name="TBoxWrite_DiscountBasic" Style="{StaticResource NormalTextBoxStyle}" Width="60"/>
                        <!--라벨 이상-->
                        <Label Content="이상" Style="{StaticResource AppLabelStyle_Normal}"/>
                        <!--텍스트박스 할인액단위-->
                        <TextBox x:Name="TBoxWrite_DiscountPer" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="50" Margin="0,0,0,0"/>
                        <!--콤보박스 할인방법구분-->
                        <ComboBox x:Name="CmbBoxWrite_WonOrRate" 
                                  Style="{StaticResource NormalComboBoxStyle}"
                                  Width="40" Margin="2,0,0,0">
                            <ComboBoxItem Content="%"/>
                            <ComboBoxItem Content="원"/>
                        </ComboBox>

                        <!--라벨 거래구분-->
                        <Label Content="거래구분" Style="{StaticResource BlueGreenLabelStyle}" Width="72" Margin="6,0,0,0"/>
                        <!--콤보박스 거래구분-->
                        <ComboBox x:Name="CmbBoxWrite_TradeType" 
                                  Style="{StaticResource NormalComboBoxStyle}"
                                  Width="70">
                            <ComboBoxItem Content="신용"/>
                            <ComboBoxItem Content="현금"/>
                            <ComboBoxItem Content="카드"/>
                        </ComboBox>

                        <!--라벨 요금타입-->
                        <Label Content="요금타입" Style="{StaticResource BlueGreenLabelStyle}" Width="80" Margin="10,0,0,0"/>
                        <!--콤보박스 요금타입-->
                        <ComboBox x:Name="CmbBoxWrite_FeeType" 
                                  Style="{StaticResource NormalComboBoxStyle}"                 
                                  Width="80">
                            <ComboBoxItem Content="[값없음]"/>
                        </ComboBox>
                        <!--체크박스 전체변경 //-->
                        <CheckBox x:Name="ChBoxInternetID" 
                              Content="전체변경" 
                              Style="{StaticResource AppCheckBoxStyle_Normal}" Margin="5,1,0,0"                                 
                              Click="ChBoxWrite_AllChange_Click"/>
                    </StackPanel>
                    <!--#endregion End Row - 2  -->

                    <!--#region Row - 3 -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <!--// 라벨 업태-->
                        <Label Content="업태" Style="{StaticResource BlueBorderLabelStyle}" Width="80"/>
                        <!--텍스트박스 업태-->
                        <TextBox x:Name="TBoxWrite_업태" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="200"/>

                        <!--라벨 업종-->
                        <Label Content="업종" Style="{StaticResource BlueBorderLabelStyle}" Width="80" Margin="10,0,0,0"/>
                        <!--텍스트박스 업종-->
                        <TextBox x:Name="TBoxWrite_업종" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="160"/>

                        <!--라벨 할인액계-->
                        <Label Content="할인액계" Style="{StaticResource BlueBorderLabelStyle}" Width="80" Margin="10,0,0,0"/>
                        <!--텍스트박스 할인액계-->
                        <TextBox x:Name="TBoxWrite_DiscountSum" 
                                 Style="{StaticResource ReadOnlyNormalTextBoxStyle}" Width="160"/>
                    </StackPanel>
                    <!--#endregion End Row - 3  -->

                    <!--#region Row - 4 -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal">
                        <!--라벨 주소-->
                        <Label Content="주소" Style="{StaticResource BlueBorderLabelStyle}" Width="80"/>
                        <!--텍스트박스 주소-->
                        <TextBox x:Name="TBoxWrite_Address" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="705"/>
                    </StackPanel>
                    <!--#endregion End Row - 4  -->

                    <!--#region Row - 5 -->
                    <StackPanel Grid.Row="5" Orientation="Horizontal">
                        <!--라벨 동명-->
                        <Label Content="동명" Style="{StaticResource BlueGreenLabelStyle}" Width="80"/>
                        <!--텍스트박스 동명-->
                        <TextBox x:Name="TBoxWrite_DongBasic" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="110"/>

                        <!--라벨 시군리-->
                        <Label Content="시군리" Style="{StaticResource BlueGreenLabelStyle}" Width="80" Margin="10,0,0,0"/>
                        <!--텍스트박스 시군리-->
                        <TextBox x:Name="TBoxWrite_SiGunRi" 
                                 Style="{StaticResource ReadOnlyNormalTextBoxStyle}" Width="250"/>

                        <!--버튼 현위치 //-->
                        <Button x:Name="BtnSearch_ThisPos" 
                                Width="80" Margin="10,0,0,0" 
                                Style="{StaticResource PinkNormalBtnStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="\Resources\Images\Position001.png" Height="{StaticResource AppImageHeight_Mid}"/>
                                <TextBlock Text="현위치" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <!--체크박스 기사 오더상세 총요금보기-->
                        <Border Style="{StaticResource NormalBorderStyle}" Width="160" BorderBrush="Black" Background="White" Margin="2,0,0,0">
                            <CheckBox x:Name="ChkBoxWrite_ShowDrvTotFee"                                   
                                      Content="기사상세 총요금보기" Margin="2,0,0,0"
                                      Style="{StaticResource AppCheckBoxStyle_Normal}"                                  
                                      Click="ChkBoxWrite_ShowDrvTotFee_Click"/>
                        </Border>
                    </StackPanel>
                    <!--#endregion End Row - 5  -->

                    <!--#region Row - 6 -->
                    <StackPanel Grid.Row="6" Orientation="Horizontal">
                        <!--라벨 상세위치-->
                        <Label Content="상세위치" Style="{StaticResource BlueGreenLabelStyle}" Width="80" Height="48"/>

                        <!--스크롤뷰 상세위치-->
                        <Border Margin="2,0,0,0" Style="{StaticResource NormalBorderStyle}" Width="705" Height="50">
                            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
                                <TextBox x:Name="TBoxWrite_DetailAddr" 
                                         Style="{StaticResource ReadOnlyScrollViewTextBoxStyle}" Width="690" Height="50"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                    <!--#endregion End Row - 6  -->

                    <!--#region Row - 7 -->
                    <StackPanel Grid.Row="7" Orientation="Horizontal">
                        <!--라벨 메모-->
                        <Label Content="메모" Style="{StaticResource BlueGreenLabelStyle}" Width="80" Height="48"/>
                        <!--스크롤뷰 메모-->
                        <Border Margin="2,0,0,0" Style="{StaticResource NormalBorderStyle}" Width="705" Height="50">
                            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
                                <TextBox x:Name="TBoxWrite_Memo" 
                                         Style="{StaticResource ReadOnlyScrollViewTextBoxStyle}" Width="690" Height="50"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                    <!--#endregion End Row - 7  -->

                    <!--#region Row - 8 -->
                    <StackPanel Grid.Row="8" Orientation="Horizontal">
                        <!--라벨 적요-->
                        <Label Content="적요" Style="{StaticResource BlueGreenLabelStyle}" Width="80" Height="48"/>
                        <!--스크롤뷰 적요-->
                        <Border Margin="2,0,0,0" Style="{StaticResource NormalBorderStyle}" Width="705" Height="50">
                            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
                                <TextBox x:Name="TBoxWrite_Remarks" 
                                         Style="{StaticResource ReadOnlyScrollViewTextBoxStyle}" Width="690" Height="50"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                    <!--#endregion End Row - 8  -->

                    <!--#region Row - 9 -->
                    <StackPanel Grid.Row="9" Orientation="Horizontal">
                        <!--라벨 기본상차지-->
                        <Label Content="기본상차지" Style="{StaticResource BlueBorderLabelStyle}" Width="80"/>
                        <!--텍스트박스 기본상차지-->
                        <TextBox x:Name="TBoxWrite_StartPlace" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="200"/>

                        <!--라벨 운송사구분-->
                        <Label Content="운송사구분" Style="{StaticResource BlueBorderLabelStyle}" Width="80" Margin="10,0,0,0"/>
                        <!--콤보박스 운송사구분-->
                        <ComboBox x:Name="CmbBoxWrite_CustomerType" 
                                  Style="{StaticResource NormalComboBoxStyle}"
                                  Width="150" Margin="2,0,0,0">
                            <ComboBoxItem Content="화주"/>
                        </ComboBox>

                        <!--라벨 한도금액-->
                        <Label Content="한도금액" Style="{StaticResource BlueBorderLabelStyle}" Width="80" Margin="10,0,0,0"/>
                        <!--텍스트박스 한도금액-->
                        <TextBox x:Name="TBoxWrite_CreditLimit" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="99"/>
                        <!--콤보박스 한도금액-->
                        <ComboBox x:Name="CmbBoxWrite_ResetDay" 
                                  Style="{StaticResource NormalComboBoxStyle}"
                                  Width="70" Margin="2,0,0,0">
                            <ComboBoxItem Content="말일"/>
                            <ComboBoxItem Content="15일"/>
                        </ComboBox>
                    </StackPanel>
                    <!--#endregion End Row - 9  -->

                    <!--#region Row - 10 -->
                    <StackPanel Grid.Row="10" Orientation="Horizontal">
                        <!--라벨 등록일자-->
                        <Label Content="등록일자" Style="{StaticResource BlueBorderLabelStyle}" Width="80"/>
                        <!--텍스트박스 등록일자-->
                        <TextBox x:Name="TBoxWrite_RegDate" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="200"/>

                        <!--라벨 등록자-->
                        <Label Content="등록자" Style="{StaticResource BlueBorderLabelStyle}" Width="80" Margin="10,0,0,0"/>
                        <!--텍스트박스 등록자-->
                        <TextBox x:Name="TBoxWrite_Register" 
                                 Style="{StaticResource NormalTextBoxStyle}" Width="150" />
                    </StackPanel>
                    <!--#endregion End Row - 10 -->
                </Grid>
                <!--#endregion End Right_Upper-->

                <!--#region Right_Below 분할없음-->
                <Grid Grid.Row="1" x:Name="Right_Below" Margin="0,2,0,0">
                    <DataGrid x:Name="DGridCustBelong" ItemsSource="{Binding oc_VmCompany_RegistPage_Cust}" 
                              Style="{StaticResource AppDatagridStyle_Normal}" 
                              CellStyle="{StaticResource AppCellStyle_Normal}" 
                              ColumnHeaderStyle="{StaticResource AppColumnHeaderStyle_Normal}"                              
                              LoadingRow="DGridCustBelong_LoadingRow">

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="번호" Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, 
                                       Path=Header}" 
                                       HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="선택" Width="40"/>
                            <DataGridTextColumn Header="고객명" Binding="{Binding CustName}" Width="150"/>
                            <DataGridTextColumn Header="전화번호" Binding="{Binding TelNo}" Width="110"/>
                            <DataGridTextColumn Header="담당/직위" Binding="{Binding ChargeName}" Width="120"/>   
                            <DataGridTextColumn Header="거래" Width="50"/>
                            <DataGridTextColumn Header="메모" Binding="{Binding Memo}" Width="300"/>
                            <DataGridTextColumn Header="사용여부" Binding="{Binding Using}" Width="40"/>
                        </DataGrid.Columns>       
                    </DataGrid>
                </Grid>
                <!--#endregion End Right_Below-->
            </Grid>
            <!--#endregion End Body_Right-->
        </Grid>
        <!--#endregion End Grid_Body-->
    </Grid>
    <!--#endregion Render-->
</Page>
