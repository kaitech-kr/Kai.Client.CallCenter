                    <StackPanel Style="{StaticResource StackPanelStyle}">
                        <Image Source="\Resources\Images\Pda001.png" Style="{StaticResource Image2Style}"/>
                        <TextBlock Text="PDA" Margin="15,0,0,0" Style="{StaticResource TextBlockStyle}"/>
                    </StackPanel>
                </Button>

                <!--// 배차제한 버튼 //-->
                <Button x:Name="BtnDenyAlloc" Style="{StaticResource ImageBtn3Style}" 
                        Click="BtnDenyAlloc_Click">
                    <StackPanel Style="{StaticResource StackPanelStyle}">
                        <Image Source="\Resources\Images\Cancel002.png" Style="{StaticResource Image2Style}"/>
                        <TextBlock Text="배차제한" Margin="5,0,0,0" Style="{StaticResource TextBlockStyle}"/>
                    </StackPanel>
                </Button>

                <!--// 기사현황 버튼 //-->
                <Button x:Name="BtnDriverState" Style="{StaticResource ImageBtn3Style}" 
                        Click="BtnDriverState_Click">
                    <StackPanel Style="{StaticResource StackPanelStyle}">
                        <Image Source="\Resources\Images\Driver001.png" Style="{StaticResource Image2Style}"/>
                        <TextBlock Text="기사현황" Margin="5,0,0,0" Style="{StaticResource TextBlockStyle}"/>
                    </StackPanel>
                </Button>

                <!--// 배차현황 버튼 //-->
                <Button x:Name="BtnAllocState" Style="{StaticResource ImageBtn3Style}" 
                        Click="BtnAllocState_Click">
                    <StackPanel Style="{StaticResource StackPanelStyle}">
                        <Image Source="\Resources\Images\Allocate003.png" Style="{StaticResource Image2Style}"/>
                        <TextBlock Text="배차현황" Margin="5,0,0,0" Style="{StaticResource TextBlockStyle}"/>
                    </StackPanel>
                </Button>

                <!--// 공유오더 버튼 //-->
                <Button x:Name="BtnShareState" Style="{StaticResource ImageBtn3Style}" 
                        Click="BtnShareState_Click">
                    <StackPanel Style="{StaticResource StackPanelStyle}">
                        <Image Source="\Resources\Images\Share001.png" Style="{StaticResource Image2Style}"/>
                        <TextBlock Text="공유오더" Margin="5,0,0,0" Style="{StaticResource TextBlockStyle}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <!--#endregion Col-0 Tel_Order_Count(오더상태 이미지버튼))-->

            <!--#region Col-1(상태별 라벨1) -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <!--// Row - 0(접수)라벨-->
                <Ellipse Grid.Row="0" x:Name="EllipseReceipt"
                         Style="{StaticResource EllipseStyle}" Fill="{StaticResource AppBrushLightReceipt}"/>
                <Label Grid.Row="0" x:Name="LblDispReceipt" Style="{StaticResource AppLabelStyle_Normal}"
                       Content="접수" />

                <!--// Row - 1(대기)라벨-->
                <Ellipse Grid.Row="1" x:Name="EllipseWait"     
                         Style="{StaticResource EllipseStyle}" Fill="{StaticResource AppBrushLightWait}"/>
                <Label Grid.Row="1" x:Name="LblDispWait" Content="대기" Style="{StaticResource AppLabelStyle_Normal}"/>

                <!--// Row - 2(배차)라벨-->
                <Ellipse Grid.Row="2" x:Name="EllipseAlloc"     
                         Style="{StaticResource EllipseStyle}" Fill="{StaticResource AppBrushLightAlloc}"/>
                <Label Grid.Row="2" x:Name="LblDispAlloc" Content="배차" Style="{StaticResource AppLabelStyle_Normal}"/>

                <!--// Row - 3(예약)라벨-->
                <Ellipse Grid.Row="3" x:Name="EllipseReserve"      
                         Style="{StaticResource EllipseStyle}" Fill="{StaticResource AppBrushLightReserve}"/>
                <Label Grid.Row="3" x:Name="LblDispReserve" Content="예약" Style="{StaticResource AppLabelStyle_Normal}"/>

                <!--// Row - 4(개수)라벨-->
                <Ellipse Grid.Row="4" x:Name="EllipseCountTot"    
                         Style="{StaticResource EllipseStyle}" Fill="LightGray"/>
                <Label Grid.Row="4" x:Name="LblDispCountTot" Content="개수" FontWeight="Bold" Style="{StaticResource AppLabelStyle_Normal}"/>
            </Grid>
            <!--#endregion Col-1(상태별 라벨1)-->

            <!--#region  Col - 2(상태별 합계1) -->
            <StackPanel Grid.Column="2">
                <!--// 접수계-->
                <Label  x:Name="LblSumsReceipt" Content="0/0" Style="{StaticResource LabelCountStyle}" Margin="0,0,5,0"/>
                <!--// 대기계-->
                <Label  x:Name="LblSumsWait" Content="0/0" Style="{StaticResource LabelCountStyle}" Margin="0,0,5,0"/>
                <!--// 배차계-->
                <Label  x:Name="LblSumsAlloc" Content="0/0" Style="{StaticResource LabelCountStyle}" Margin="0,0,5,0"/>
                <!--// 예약계-->
                <Label  x:Name="LblSumsReserve" Content="0/0" Style="{StaticResource LabelCountStyle}" Margin="0,0,5,0"/>
                <!--// 개수합계-->
                <Label  x:Name="LblSumsTot" Content="0 개" Style="{StaticResource LabelCountStyle}" Margin="0,0,5,0"      
                        Foreground="Blue" FontWeight="Bold" Visibility="Visible"/>
            </StackPanel>
            <!--#endregion Col - 2(상태별 합계1)-->

            <!--#region  Col - 3(상태별 라벨2) -->
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <!--// Row - 2.3.0(운행)-->
                <Ellipse Grid.Row="0" x:Name="EllipseRun" Style="{StaticResource EllipseStyle}" Fill="{StaticResource AppBrushLightRun}"/>
                <Label Grid.Row="0" x:Name="LblDispRun" Content="운행" Style="{StaticResource AppLabelStyle_Normal}"/>

                <!--// Row - 2.3.1(완료)-->
                <Ellipse Grid.Row="1" x:Name="EllipseFinish" Style="{StaticResource EllipseStyle}" Fill="{StaticResource AppBrushLightFinish}"/>
                <Label Grid.Row="1" x:Name="LblDispFinish" Content="완료" Style="{StaticResource AppLabelStyle_Normal}"/>

                <!--// Row - 2.3.2(취소)-->
                <Ellipse Grid.Row="2" x:Name="EllipseCancel" Style="{StaticResource EllipseStyle}" Fill="{StaticResource AppBrushLightCancel}"/>
                <Label Grid.Row="2" x:Name="LblDispCancel" Content="취소" Style="{StaticResource AppLabelStyle_Normal}"/>

                <!--// Row - 2.3.4(금액합)-->
                <Ellipse Grid.Row="4" x:Name="EllipseWonTot" Style="{StaticResource EllipseStyle}" Fill="LightGray"/>
                <Label Grid.Row="4" Content="금액" FontWeight="Bold" Style="{StaticResource AppLabelStyle_Normal}"/>
            </Grid>
            <!--#endregion Col - 3(상태별 라벨2)-->

            <!--#region  Col - 4(상태별 합계2) -->
            <StackPanel Grid.Column="4">
                <!--// 운행계-->
                <Label  x:Name="LblSumsRun" Content="0/0" Style="{StaticResource LabelCountStyle}" Margin="0,0,5,0"/>
                <!--// 완료계-->
                <Label  x:Name="LblSumsFinish" Content="0/0" Style="{StaticResource LabelCountStyle}" Margin="0,0,5,0"/>
                <!--// 취소계-->
                <Label  x:Name="LblSumsCancel" Content="0/0" Style="{StaticResource LabelCountStyle}" Margin="0,0,5,0"/>

                <Label  x:Name="LblFeeTot" Content="0 원" Style="{StaticResource LabelCountStyle}" Margin="0,36,0,0"                        
                        Foreground="Blue" FontWeight="Bold" Visibility="Visible"/>
                <!--// 금액합계-->
            </StackPanel>
            <!--#endregion Col - 4(상태별 합계2)-->

            <!--#region  Col - 5(전화상황:탭콘트롤로 바뀔것 같음) -->
            <!--ItemsSource="{Binding Source={x:Static ViewServices:VsTelMainRing.s_TelRings}}"-->
            <StackPanel Grid.Column="5">
                <DataGrid  x:Name="DGridTel" ItemsSource="{Binding oc_VmOrder_StatusPage_Tel070}" 
                           Height="150" Style="{StaticResource AppDatagridStyle_Normal}" Margin="3"
                           SizeChanged="DGridOrder_SizeChanged" LoadingRow="DGridTel_LoadingRow" MouseLeftButtonUp="DGridTelMouseLeftButtonUp">
                    <!--스타일을 DataGrid 레벨에서 정의--> 
                    <DataGrid.Resources>
                        <!--보기 모드에서 중앙 정렬 스타일-->
                        <Style TargetType="TextBlock" x:Key="CenterTextBlockStyle">
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                        <!--편집 모드에서 중앙 정렬 스타일-->
                        <Style TargetType="TextBox" x:Key="CenterTextBoxStyle">
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.Resources>

                    <!--헤더 스타일-->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="Background" Value="LightGray"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <!--순번-->
                        <DataGridTemplateColumn Header="순번" Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, 
                                               Path=Header}" 
                                               HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!--수신시간-->
                        <DataGridTextColumn Header="수신시간" Binding="{Binding RingDate}" Width="110"
                                        ElementStyle="{StaticResource CenterTextBlockStyle}"
                                        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>

                        <!--상대전화-->
                        <DataGridTextColumn Header="상대전화" Binding="{Binding YourTelNum}" Width="110"
                                        ElementStyle="{StaticResource CenterTextBlockStyle}"
                                        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>

                        <!--고객명-->
                        <DataGridTextColumn Header="고객명" Binding="{Binding CustName}" Width="150"
                                        ElementStyle="{StaticResource CenterTextBlockStyle}"
                                        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>

                        <!--담당자-->
                        <DataGridTextColumn Header="담당자" Binding="{Binding ChargeName}" Width="100"
                                        ElementStyle="{StaticResource CenterTextBlockStyle}"
                                        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>

                        <!--부서명-->
                        <DataGridTextColumn Header="부서명" Binding="{Binding DeptName}" Width="100"
                                        ElementStyle="{StaticResource CenterTextBlockStyle}"
                                        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>

                        <!--거래처명-->
                        <DataGridTextColumn Header="거래처명" Binding="{Binding CompanyName}" Width="120"
                                        ElementStyle="{StaticResource CenterTextBlockStyle}"
                                        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>

                        <!--콜센터명-->
                        <DataGridTextColumn Header="콜센터명" Binding="{Binding CenterName}" Width="100"
                                        ElementStyle="{StaticResource CenterTextBlockStyle}"
                                        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>

                        <!--내전화별명-->
                        <DataGridTextColumn Header="내전화별명" Binding="{Binding Alias}" Width="120"
                                    ElementStyle="{StaticResource CenterTextBlockStyle}"
                                    EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>

                        <!--내전화-->
                        <DataGridTextColumn Header="내전화" Binding="{Binding MyTelNum}" Width="110"
                                        ElementStyle="{StaticResource CenterTextBlockStyle}"
                                        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>

                        <!--기준동-->
                        <DataGridTextColumn Header="기준동" Binding="{Binding BasicDong}" Width="100"
                                        ElementStyle="{StaticResource CenterTextBlockStyle}"
                                        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>

                        <!--메모-->
                        <DataGridTextColumn Header="메모" Binding="{Binding Memo}" Width="*"
                                        ElementStyle="{StaticResource CenterTextBlockStyle}"
                                        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            <!--#endregion Col - 5(전화상황:탭콘트롤로 바뀔것 같음)-->
        </Grid>
        <!--#endregion 오더집계, 전화목록-->

    </Grid>
    <!--#endregion Render-->
</Page>
