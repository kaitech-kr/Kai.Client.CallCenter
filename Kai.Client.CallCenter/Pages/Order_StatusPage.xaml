<Page x:Class="Kai.Client.CallCenter.Pages.Order_StatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kai.Client.CallCenter.Pages"
      mc:Ignorable="d"    
      xmlns:sys="clr-namespace:System;assembly=netstandard"  
      xmlns:vs="clr-namespace:Kai.Client.CallCenter.MVVM.ViewServices"
      d:DesignHeight="900" d:DesignWidth="1415"     
      Title="오더상황" Background="LightGray"
      Loaded="Page_Loaded" Unloaded="Page_Unloaded">
    <!--<Page.DataContext>
        <vs:VsOrder_StatusPage/>
    </Page.DataContext>-->

    <!--#region Resources -->
    <Page.Resources>

        <!-- Context 메뉴 -->
        <ContextMenu x:Key="OrderContextMenu">
            <MenuItem Header="접수상태로..." Click="OrderContext_ToReceiptState_Click"/>
            <MenuItem Header="대기" Click="OrderContext_ToWaitState_Click"/>
            <MenuItem Header="주문취소" Click="OrderContext_ToCancelState_Click"/>
            <Separator/>
            <MenuItem Header="콜복사">
                <MenuItem Header="접수로" Click="OrderContext_CopyToReceipt_Click"/>
                <MenuItem Header="대기로" Click="OrderContext_CopyToWait_Click"/>
            </MenuItem>
        </ContextMenu>

        <!-- Driver Context 메뉴 -->
        <ContextMenu x:Key="DriverContextMenu">
            <MenuItem Header="기사에게 전화걸기" Click="DriverContext_CallDriver_Click"/>
        </ContextMenu>

        <!--Brush-->
        <SolidColorBrush x:Key="BrushGray" Color="#404040"/>

        <!--Button-->
        <Style x:Key="StateToggleBtnStyle" TargetType="ToggleButton"
               BasedOn="{StaticResource AppToggleBtnStyle_Normal}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style TargetType="Button" x:Key="ImageBtnStyle_Enabled">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="54"/>
            <Setter Property="Margin" Value="1,0,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ImageBtnStyle_Disabled" TargetType="Button" BasedOn="{StaticResource ImageBtnStyle_Enabled}">
            <Setter Property="Opacity" Value="{StaticResource AppOpacity_Disabled}"/>
        </Style>
        <Style TargetType="Button" x:Key="ImageBtn2Style">
            <Setter Property="Margin" Value="1,1,0,0"/>
            <Setter Property="Width" Value="118" />
            <Setter Property="Height" Value="29" />
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style TargetType="Button" x:Key="ImageBtn3Style">
            <Setter Property="Margin" Value="1,1,0,0"/>
            <Setter Property="Width" Value="98" />
            <Setter Property="Height" Value="29" />
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Blue"/>
        </Style>
        <Style TargetType="Button" x:Key="TextBtnStyle" BasedOn="{StaticResource AppButtonStyle_Normal}">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="1,2,0,0"/>
        </Style>

        <!--// Border-->
        <Style x:Key="RedBorderStyle" TargetType="Border" >
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Red"/>
        </Style>

        <!--// 라벨-->
        <Style TargetType="Label" x:Key="LabelStyle" BasedOn="{StaticResource AppLabelStyle_Normal}">
            <Setter Property="BorderBrush" Value="Blue"/>
            <Setter Property="Background" Value="Beige" />
        </Style>
        <Style TargetType="Label" x:Key="LabelCountStyle" BasedOn="{StaticResource AppLabelStyle_Normal}">
            <Setter Property="HorizontalContentAlignment" Value="Right" />
            <Setter Property="Height" Value="30" />
        </Style>

        <!--// DatePicker-->
        <Style TargetType="DatePicker" x:Key="DatePickerStyle">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Italic" />
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="110" />
            <Setter Property="Height" Value="{StaticResource AppItemHeight_Normal}" />
        </Style>

        <!--// ComboBox-->
        <!--<Style TargetType="ComboBox" x:Key="ComboBoxStyle" BasedOn="{StaticResource AppComboBoxStyle_Normal}">
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="{StaticResource AppItemHeight_Normal}"/>
        </Style>-->

        <!--// 워터마크 텍스트박스-->
        <Style x:Key="TextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource AppTextBoxStyle_Normal}">
            <Setter Property="Height" Value="{StaticResource AppItemHeight_Normal}"/>
        </Style>

        <!--// 워터마크 텍스트박스-->
        <Style x:Key="WatermarkDarkStyle" TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="Margin" Value="2,0,0,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="#F0F0F0" />
            <Setter Property="Width" Value="119"/>
        </Style>
        <Style x:Key="WatermarkLightStyle" TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="Margin" Value="2,0,0,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="DarkGray" />
            <Setter Property="Background" Value="#F0F0F0" />
            <Setter Property="Width" Value="119"/>
        </Style>

        <!--// CheckBox-->
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle" BasedOn="{StaticResource AppCheckBoxStyle_Normal}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!--// Image-->
        <Style x:Key="Image2Style" TargetType="Image">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
        </Style>

        <!--// 텍스트블럭-->
        <Style TargetType="TextBlock" x:Key="TextBlockStyle" BasedOn="{StaticResource AppTextBlockStyle_Normal}">
            <Setter Property="Margin" Value="10,0,0,0" />
        </Style>
        <Style TargetType="TextBlock" x:Key="TextBlockStyle_ImgBtn" BasedOn="{StaticResource AppTextBlockStyle_Normal}">
            <Setter Property="Margin" Value="0,1,0,0" />
        </Style>

        <!--// StackPanel-->
        <Style x:Key="StackPanelStyle" TargetType="StackPanel">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!--// Ellipse-->
        <Style TargetType="Ellipse" x:Key="EllipseStyle">
            <Setter Property="Stroke" Value="{StaticResource BrushGray}" />
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="26"/>
        </Style>
    </Page.Resources>
    <!--#endregion-->

    <!--#region Render -->
    <Grid>
        <!--전체를 행 3개로 분할-->
        <Grid.RowDefinitions>
            <RowDefinition Height="122" x:Name="Header"/>
            <!--헤더-->
            <RowDefinition Height="*" x:Name="Order_DataGrid"/>
            <!--오더목록(DataGrid)-->
            <RowDefinition Height="150" x:Name="Tel_Order_Count"/>
            <!--오더집계, 전화목록-->
        </Grid.RowDefinitions>

        <!--#region 헤더 -->
        <Grid Grid.Row="0">
            <!--헤더를 열 3개로 분할-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1216" x:Name="Header_Left"/>
                <ColumnDefinition Width="120" x:Name="Header_Mid"/>
                <ColumnDefinition Width="*" x:Name="Header_Right"/>
            </Grid.ColumnDefinitions>

            <!--#region Header_Left -->
            <Grid Grid.Column="0">
                <!--헤더(좌)를 행 2개로 분할-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="90" x:Name="Header_Left_Upper"/>
                    <RowDefinition Height="30" x:Name="Header_Left_Below"/>
                </Grid.RowDefinitions>

                <!--#region Header_Left_Upper(오더상태 버튼 그룹) -->
                <Grid Grid.Row="0">
                    <!--헤더(좌-상) 상단을 열 4개로 분할(상-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="292" x:Name="Header_Left_Upper_Col_0"/>
                        <ColumnDefinition Width="288" x:Name="Header_Left_Upper_Col_1"/>
                        <ColumnDefinition Width="268" x:Name="Header_Left_Upper_Col_2"/>
                        <ColumnDefinition Width="369" x:Name="Header_Left_Upper_Col_3"/>
                    </Grid.ColumnDefinitions>

                    <!--#region Header_Left_Upper_Col_0(상태버튼들) -->
                    <WrapPanel Grid.Column="0" Margin="1">
                        <!--#region 접수버튼 -->
                        <ToggleButton Content="접수" 
                                      x:Name="TogBtnReceipt"
                                      Checked="TogBtnReceipt_Checked"
                                      Unchecked="TogBtnReceipt_Unchecked"
                                      Margin="3,3,0,0">
                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}" 
                                       BasedOn="{StaticResource StateToggleBtnStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}" 
                                                        BorderBrush="{StaticResource BrushGray}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter x:Name="contentPresenter" 
                                                                      Content="{TemplateBinding Content}"
                                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushDarkReceipt}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Bold" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushLightReceipt}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Thin" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <!--#endregion 접수버튼-->

                        <!--#region 대기버튼 -->
                        <ToggleButton Content="대기" 
                                  x:Name="TogBtnWait"
                                  Checked="TogBtnWait_Checked"
                                  Unchecked="TogBtnWait_Unchecked"
                                  Margin="2,3,0,0">
                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}" 
                                       BasedOn="{StaticResource StateToggleBtnStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}" 
                                                        BorderBrush="{StaticResource BrushGray}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter x:Name="contentPresenter" 
                                                                      Content="{TemplateBinding Content}"
                                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushDarkWait}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Bold" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushLightWait}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Thin" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <!--#endregion 대기버튼-->

                        <!--#region 배차버튼 -->
                        <ToggleButton Content="배차"
                                      x:Name="TogBtnAllocate"
                                      Checked="TogBtnAllocate_Checked"
                                      Unchecked="TogBtnAllocate_Unchecked"
                                      Margin="2,3,0,0">
                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}" 
                                       BasedOn="{StaticResource StateToggleBtnStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}" 
                                                        BorderBrush="{StaticResource BrushGray}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter x:Name="contentPresenter" 
                                                                      Content="{TemplateBinding Content}"
                                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushDarkAlloc}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Bold" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushLightAlloc}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Thin" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <!--#endregion 배차버튼-->

                        <!--#region 예약버튼 -->
                        <ToggleButton Content="예약"
                                      x:Name="TogBtnReserve"
                                      Checked="TogBtnReserve_Checked"
                                      Unchecked="TogBtnReserve_Unchecked"
                                      Margin="2,3,0,0">
                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}" 
                                       BasedOn="{StaticResource StateToggleBtnStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}" 
                                                        BorderBrush="{StaticResource BrushGray}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter x:Name="contentPresenter" 
                                                                      Content="{TemplateBinding Content}"
                                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushDarkReserve}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Bold" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushLightReserve}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Thin" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <!--#endregion 예약버튼-->

                        <!--#region 운행버튼 -->
                        <ToggleButton Content="운행"
                                      Margin="3,3,0,0"  
                                      x:Name="TogBtnRun"
                                      Checked="TogBtnRun_Checked"
                                      Unchecked="TogBtnRun_Unchecked">
                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}" 
                                       BasedOn="{StaticResource StateToggleBtnStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}" 
                                                        BorderBrush="{StaticResource BrushGray}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter x:Name="contentPresenter" 
                                                                      Content="{TemplateBinding Content}"
                                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushDarkRun}"/>
                                                        <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Bold" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushLightRun}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Thin" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <!--#endregion 운행버튼-->

                        <!--#region 완료버튼 -->
                        <ToggleButton Content="완료"
                                      x:Name="TogBtnFinish"
                                      Checked="TogBtnFinish_Checked"
                                      Unchecked="TogBtnFinish_Unchecked"
                                      Margin="2,3,0,0">
                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}" 
                                       BasedOn="{StaticResource StateToggleBtnStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}" 
                                                        BorderBrush="{StaticResource BrushGray}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter x:Name="contentPresenter" 
                                                                      Content="{TemplateBinding Content}"
                                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushDarkFinish}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Bold" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushLightFinish}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Thin" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <!--#endregion 완료버튼-->

                        <!--#region 취소버튼 -->
                        <ToggleButton Content="취소"
                                      x:Name="TogBtnCancel"
                                      Checked="TogBtnCancel_Checked"
                                      Unchecked="TogBtnCancel_Unchecked"
                                      Margin="2,3,0,0">
                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}" 
                                       BasedOn="{StaticResource StateToggleBtnStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}" 
                                                        BorderBrush="{StaticResource BrushGray}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter x:Name="contentPresenter" 
                                                                      Content="{TemplateBinding Content}"
                                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushDarkCancel}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Bold" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushLightCancel}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Thin" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <!--#endregion 취소버튼-->

                        <!--#region 전체버튼 -->
                        <ToggleButton x:Name="TogBtnTotal" Content="전체" Margin="2,3,0,0"
                                      Checked="TogBtnTotal_Checked" Unchecked="TogBtnTotal_Unchecked">
                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}" 
                                       BasedOn="{StaticResource StateToggleBtnStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}" 
                                                        BorderBrush="{StaticResource BrushGray}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter x:Name="contentPresenter" 
                                                                      Content="{TemplateBinding Content}"
                                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushDarkTotal}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Bold" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource AppBrushLightTotal}" />
                                                        <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                                        <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="Thin" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <!--#endregion 전체버튼-->

                    </WrapPanel>
                    <!--#endregion Header_Left_Upper_Col_0(상태버튼들)-->

                    <!--#region Header_Left_Upper_Col_1(검색조건 그룹)  -->
                    <Border Grid.Column="1"
                            BorderBrush="DarkGray" 
                            BorderThickness="1"
                            Background="LightGray"
                            Margin="1"
                            Width="Auto" Height="Auto">

                        <StackPanel Margin="2">
                            <!--일자 라벨 라인-->
                            <StackPanel Orientation="Horizontal">
                                <Label Content="일자" 
                                       Style="{StaticResource LabelStyle}" 
                                       Width="40" />                      
                                
                                <DatePicker x:Name="DatePickerStart"
                                            Style="{StaticResource DatePickerStyle}" SelectedDate="{x:Static sys:DateTime.Now}" Margin="2,0,0,0"
                                            LostFocus="DatePickerStart_LostFocus" SelectedDateChanged="DatePicker_SelectionChanged"/>
                                <Label Content="~"/>
                                <DatePicker x:Name="DatePickerEnd"
                                            Style="{StaticResource DatePickerStyle}" SelectedDate="{x:Static sys:DateTime.Now}"
                                            LostFocus="DatePickerEnd_LostFocus" SelectedDateChanged="DatePicker_SelectionChanged"/>
                            </StackPanel>

                            <!--// 검색라벨 라인-->
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">

                                <Label Content="검색" 
                                       Style="{StaticResource LabelStyle}"
                                       Width="40"/>

                                <ComboBox x:Name="CmbBoxSearch" 
                                          Style="{StaticResource AppComboBoxStyle_Normal}" Width="75" SelectedIndex="0"
                                          Margin="2,0,0,0">
                                    <ComboBoxItem Content="전체"/>
                                    <ComboBoxItem Content="전화"/>
                                    <ComboBoxItem Content="자기사"/>
