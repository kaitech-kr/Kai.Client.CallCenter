<Window x:Class="Kai.Client.CallCenter.Windows.SplashWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kai.Client.CallCenter.Windows"
        mc:Ignorable="d"
        Title="SplashWindow" Height="500" Width="750"
        ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen"
        BorderBrush="Black" BorderThickness="5"
        Loaded="Splash_Loaded" Closing="Window_Closing">
    
    <Grid>
        <Image Source="/Resources/Images/delivery001.jpg" Height="500" Width="800"/>

        <TextBlock Text="KAI Tech" FontSize="60" FontWeight="Bold" Foreground="Blue" HorizontalAlignment="Center" Margin="0,70,0,0"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,46,100" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Label Content="아이디" FontSize="18" FontWeight="Bold"/>
            <TextBox x:Name="TBoxID" Width="150" Height="30" Margin="5,0,0,0" VerticalContentAlignment="Center"
                     BorderThickness="1" BorderBrush="Black" Background="Transparent"  
                     KeyDown="TBoxID_KeyDown"></TextBox>
            <CheckBox x:Name="ChBoxID" Content="저장" Margin="10,0,0,0" VerticalContentAlignment="Center" 
                      Click="ChBoxID_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,100,65" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Label Content="비밀번호" FontSize="18" FontWeight="Bold"/>
            <PasswordBox x:Name="PwBoxPW" KeyDown="PwBoxPW_KeyDown"
                         BorderThickness="1" BorderBrush="Black" Background="Transparent"
                         Width="150" Height="30" Margin="5,0,0,0" VerticalContentAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,300,30" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <TextBlock x:Name="TBlockStatus2" Text="서버 연결 시도 중..."
                       FontSize="14" Foreground="Blue" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <ProgressBar IsIndeterminate="True" Width="400" Height="10"/>
        </StackPanel>

        <Button x:Name="BtnCancel" Click="BtnCancel_Click"
                Content="취소" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Margin="0,0,100,30" FontWeight="Bold" Visibility="Collapsed"/>
    </Grid>
</Window>
